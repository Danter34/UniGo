<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#F5F5F5"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/btnBackDetail"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/abc_ic_ab_back_material"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết ngành đào tạo"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <ImageView
                android:id="@+id/imgDetailBanner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvDetailName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TÊN NGÀNH HỌC"
                    android:textColor="#B71C1C"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvContent1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nội dung giới thiệu..."
                    android:textSize="15sp"
                    android:textColor="#333"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp"/>
                <ImageView
                    android:id="@+id/imgDetail1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MỤC TIÊU ĐÀO TẠO"
                    android:textColor="#B71C1C"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvContent2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nội dung mục tiêu..."
                    android:textSize="15sp"
                    android:textColor="#333"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp"/>



                <ImageView
                    android:id="@+id/imgDetail2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TRIỂN VỌNG NGHỀ NGHIỆP"
                    android:textColor="#B71C1C"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvContent3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nội dung triển vọng..."
                    android:textSize="15sp"
                    android:textColor="#333"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp"/>



            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>