<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/red_primary"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btnBackQuestion"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:tint="@color/white"
            android:src="@drawable/abc_ic_ab_back_material"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hỏi đáp &amp; Hỗ trợ"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginEnd="32dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn vấn đề cần hỗ trợ"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_rounded"
                android:paddingHorizontal="8dp">

                <Spinner
                    android:id="@+id/spnTopic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nội dung câu hỏi"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/edtContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_rounded"
                android:padding="16dp"
                android:hint="Nhập chi tiết thắc mắc của bạn tại đây..."
                android:gravity="top|start"
                android:minLines="8"
                android:inputType="textMultiLine"/>
            <Button
                android:id="@+id/btnSendQuestion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="GỬI CÂU HỎI"
                android:backgroundTint="#2196F3"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_marginTop="30dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>